<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="18dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".sign_in_ForCustomer">

    <ImageView
        android:id="@+id/temp_imgProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/temp_tvForCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/green"
        android:text="Sign In As Customer"
        android:layout_marginVertical="8dp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/Customer_edtEmailSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Enter Your Email Address"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/Customer_edtPasswordSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Enter Your Password"
        android:layout_marginVertical="9dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btnSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Customer_btnSignIn_P1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/green"
        android:text="Sign In"
        app:layout_constraintBottom_toTopOf="@+id/tvSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Customer_tvSignUp_SignIn_P1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/green"
        android:text="Do not have any account? Click here to Sign Up"
        android:textAlignment="center"
        android:textColor="@color/lightBlue"
        android:textSize="20sp"
         />
    <TextView
        android:id="@+id/Customer_tvForgotPassword_SignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/green"
        android:text="Forgot Your Password"
        android:textAlignment="center"
        android:textColor="@color/lightBlue"
        android:textSize="20sp"
        />





</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simpleActivity.register_number"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCustomer"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/black"
        android:background="@drawable/round_button"
        android:text="Customer"
        android:textSize="10sp"

        />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In As Service Provider"
        android:textAlignment="center"
        android:layout_marginVertical="8dp"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/putNumberEdt"
        android:layout_marginStart="16dp"/>
</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ServiceProvider_getOtp"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button3"
        android:textColor="@color/white"
        android:text="Send OTP"
        android:textAllCaps="false"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do not have any account?"
            android:layout_marginLeft="40dp"
            android:textColor="@color/lightBlue"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tvRegister_serviceProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Register"
            android:textSize="16sp"
            android:textColor="@color/lightBlue"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>
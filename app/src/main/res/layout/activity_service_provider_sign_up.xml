<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".serviceProviderSignUp">

    <TextView
        android:id="@+id/temp_tvForServiceProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Service Provider Registration"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textAlignment="center"
       android:layout_gravity="center"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/temp_tvHeadingForServiceProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the correct details in the following fields to signup"
        android:textColor="@color/green"
        android:gravity="center"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/ServiceProvider_edtFullName_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:hint="Enter Full Name"
        android:inputType="text"
         />

    <EditText
        android:id="@+id/ServiceProvider_edtPhone_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter Phone Number"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/ServiceProvider_edtCNIC_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter CNIC"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/ServiceProvider_edtPassword_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Enter Password"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/ServiceProvider_btnSelectAddress_SignUp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/green"
        android:text="Select Permanent Address"

        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/ServiceProvider_tvAlreadyAccountSignIn_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Click here to Sign In"
        android:textAlignment="center"
        android:textColor="@color/lightBlue"
        android:textSize="20sp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="20dp"
    tools:context=".booking_summary">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Booking Summary"
       android:gravity="center"
       android:textSize="35sp"
       android:layout_weight="3"
       android:textColor="@color/green"
       android:textStyle="bold"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:weightSum="6"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cash_amount"
            android:layout_weight="0.2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:textStyle="bold"
            android:layout_weight="4.8"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Rs.0"
            android:layout_weight="1"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:weightSum="6"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/services"
            android:layout_weight="0.2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services:"
            android:textStyle="bold"
            android:layout_weight="4.8"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="right"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:weightSum="5"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/basket"
            android:layout_weight="0.2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Name:"
            android:textStyle="bold"
            android:layout_weight="4.8"
            android:textSize="18sp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_weight="0.2"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.2"
        android:weightSum="7"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_weight="0.1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textStyle="bold"
            android:layout_weight="6.9"
            android:textSize="18sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="No Location"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmBookSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button3"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="Confirm Booking"
        />
    </LinearLayout>


</LinearLayout>
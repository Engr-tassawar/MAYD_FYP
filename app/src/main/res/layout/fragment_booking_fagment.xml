<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/onGoing_complete_cancelled"
    android:padding="10dp"
    tools:context="fragments.booking_fragment">
    <!-- TODO: Update blank fragment layout -->




    <TextView
    android:id="@+id/tv_Booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Booking"
        android:gravity="center"
    android:textColor="@color/green"
        android:layout_marginTop="55dp"
    android:textSize="25sp"
    android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/customer_tabLayout"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="@color/green"
        app:tabIndicatorColor="@color/lightGreen"
        android:elevation="12dp"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customer_viewpager"
        />

</LinearLayout>